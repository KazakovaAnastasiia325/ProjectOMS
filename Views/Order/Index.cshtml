@model List<OrderManagement.Models.Order>
@{
    ViewData["Title"] = "Заказы";
}
<h2>Заказы</h2>
<a asp-action="Create" class="btn btn-primary">Новый Заказ</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Клиент</th>
            <th>Товар</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerName</td>
                <td>@order.Product</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>